  <style>
    body {
      background-color: #000;
      color: #fff;
      font-family: Arial, sans-serif;
     /* display: flex;
      flex-direction: column;*/
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    input {
      height: 70px;
      width: 270px;
      background-color: black;
      color: white;
      text-align: right;
      font-size: 40px;
      border: none;
      margin-bottom: 20px;
    }

    .button-container {
      display: grid;
      grid-template-columns: repeat(4, 65px);
      gap: 10px;
    }

    button {
      border-radius: 50%;
      height: 60px;
      width: 60px;
      font-size: 22px;
      border: none;
      box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3);
      cursor: pointer;
      transition: 0.2s;
    }

    .number {
      background-color: #d4d4d2;
      color: black;
    }

    .operator {
      background-color: orange;
      color: white;
    }

    .function {
      background-color: #a5a5a5;
      color: black;
    }

    button:hover {
      opacity: 0.85;
    }
